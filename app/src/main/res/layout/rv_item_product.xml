<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/transparent"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:backgroundTint="@color/transparent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/main_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@color/purple1_transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_image_placeholder"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/item_image"
                    android:layout_marginStart="15dp"
                    android:text="Device Name"
                    android:textColor="@color/White"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toStartOf="@id/drop_button"
                    android:text="✘"
                    android:textColor="@color/White"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_text"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/drop_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_expand"
                    android:background="@color/transparent"
                    />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandableLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_view">

                <RelativeLayout
                    android:padding="10dp"
                    android:paddingTop="8dp"
                    android:id="@+id/expanded_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:id="@+id/name_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/customer_name_phd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Name:"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/customer_name_txt"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/customer_name_phd"
                            android:text="Hossam Alaa"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/email_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/name_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/image_email"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_email_purple"
                            />
                        <TextView
                            android:id="@+id/user_email"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/image_email"
                            android:text="Email@address.com"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/phone_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/email_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/image_phone"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_phone_purple"
                            />
                        <TextView
                            android:id="@+id/user_phone"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/image_phone"
                            android:text="01146513563"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/payment_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/phone_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/payment_phd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price:"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/price_txt"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/payment_phd"
                            android:text="10£"
                            android:textColor="@color/dark"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>
                        <TextView
                            android:id="@+id/payment_txt"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/price_txt"
                            android:text="Paid"
                            android:textColor="@color/dark"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/device_id_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/payment_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/device_id_phd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device ID:"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/device_id_txt2"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/device_id_phd"
                            android:text="3319626497666"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/issue_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/device_id_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/issue_phd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Issue:"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/device_issue_txt2"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/issue_phd"
                            android:text="Broken Screen"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/password_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/issue_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/password_phd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Password:"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/device_password_txt2"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/password_phd"
                            android:textStyle="bold"
                            android:text="12345678"
                            android:textColor="@color/dark"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/booking_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/password_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/book_phd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Date:"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/booking_txt"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/book_phd"
                            android:text="Tue, 15 Aug 2020, 17:30:45"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/deliver_part"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/booking_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/deliver_phd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Date:"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/deliver_txt"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/deliver_phd"
                            android:text="Thu, 17 Aug 2020, 13:02:30"
                            android:textColor="@color/dark"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/share_img"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_below="@id/deliver_part"
                        android:src="@drawable/ic_open_pdf"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>